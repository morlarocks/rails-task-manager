<%= form_for @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class:'form-control'%>
  <%= f.label :details %>
  <%= f.text_field :details, class:'form-control' %>
  <%= f.check_box :completed %>
  <%= label_tag(:completed, "Mark if checked") %>
  <%= f.button class: 'btn btn-primary'%>
<% end %>
